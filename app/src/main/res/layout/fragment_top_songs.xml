<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <!-- Top text: April 2025 -->
    <TextView
        android:id="@+id/topTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="April 2025"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- First line: "You played" -->
    <TextView
        android:id="@+id/listenTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You played"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/topTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Highlighted count: "137 artists" -->
    <TextView
        android:id="@+id/SongsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="203 different"
        android:textColor="#F8E747"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/listenTimeText"
        app:layout_constraintTop_toTopOf="@id/listenTimeText" />

    <TextView
        android:id="@+id/Songs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="songs"
        android:textColor="#F8E747"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/listenTimeText"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Line 2: "this month." -->

    <!-- RecyclerView for the list -->

    <TextView
        android:id="@+id/thisMonthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="4dp"
        android:text="this month."
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listenTimeText" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewArtists"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/thisMonthText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="152dp">

        <include layout="@layout/top_songs_item" />
        <include layout="@layout/top_songs_item" />
        <include layout="@layout/top_songs_item" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
